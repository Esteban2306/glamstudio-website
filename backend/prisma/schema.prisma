generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  CLIENT
  LASHIST
  ADMIN
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

enum DayOfWeek {
  SUNDAY
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
}

model User {
  id       String  @id @default(uuid())
  name     String
  password String?
  email    String  @unique
  phone    String
  role     Role    @default(CLIENT)

  bookings Booking[]
  lashist  Lashist?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Lashist {
  id String @id @default(uuid())

  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  isActive Boolean @default(true)
  bio      String
  avatar   String

  categories    LashistCategory[]
  businessHours BusinessHours[]
  blocks        ScheduleBlock[]
  bookings      Booking[]
  overrideHours OverrideHours[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model LashistCategory {
  id         String @id @default(uuid())
  lashistId  String
  categoryId String

  lashist  Lashist  @relation(fields: [lashistId], references: [id])
  category Category @relation(fields: [categoryId], references: [id])

  @@unique([lashistId, categoryId])
}

model Service {
  id          String  @id @default(uuid())
  name        String
  description String?
  duration    Int
  price       Float

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  bookings Booking[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id    String  @id @default(uuid())
  name  String  @unique
  image String?

  services          Service[]
  lashistCategories LashistCategory[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Booking {
  id String @id @default(uuid())

  userId String?
  user   User?   @relation(fields: [userId], references: [id])

  lashistId String
  lashist   Lashist @relation(fields: [lashistId], references: [id])

  guestName  String?
  guestEmail String?
  guestPhone String?

  serviceId String
  service   Service @relation(fields: [serviceId], references: [id])

  date      DateTime
  startTime Int
  endTime   Int

  status  BookingStatus @default(PENDING)
  comment String?

  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  transactionProofs TransactionProof[]

  @@index([date, startTime])
  @@index([date, endTime])
  @@index([lashistId, date, startTime])
}

model TransactionProof {
  id       String @id @default(uuid())
  imageUrl String

  bookingId String
  booking   Booking @relation(fields: [bookingId], references: [id])

  uploadedAt DateTime @default(now())
}

model ScheduleBlock {
  id String @id @default(uuid())

  date      DateTime
  startTime Int?
  endTime   Int?
  reason    String?

  lashistId String?
  lashist   Lashist? @relation(fields: [lashistId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([date, startTime])
  @@index([lashistId, date])
}

model BusinessHours {
  id        String    @id @default(uuid())
  day       DayOfWeek
  startTime Int
  endTime   Int

  lashistId String
  lashist   Lashist @relation(fields: [lashistId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([lashistId, day])
  @@index([lashistId, day])
  @@index([day, startTime])
  @@index([day, endTime])
}

model OverrideHours {
  id        String   @id @default(uuid())
  date      DateTime
  startTime Int
  endTime   Int

  lashistId String?
  lashist   Lashist? @relation(fields: [lashistId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
